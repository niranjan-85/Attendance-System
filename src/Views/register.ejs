<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/register-style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>
<body>
    <!-- Navbar -->
    <header class="header">
        <div class="container-fluid">
            <nav class="inner clearfix">
                <div class="logo">
                    <img src="/images/sieslogo.jpg" alt="nahi mil" id="logo-img">
                </div>
                <!-- nav dropdown button -->
                <input type="button" value="Explore" id="explore-btn">
                <div class="menu">
                    <ul class="menu-list mt-3">
                        <li class="nav-item">
                            <a class="nav-link active mx-4 links" aria-current="page" href="./home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active mx-4 links" aria-current="page">Register Faculty</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <!-- Register section -->

    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-xl auth">
                <div class="reg-form mx-5 p-2">
                    <h4 class="mb-5 heading">Faculty Register :</h4>
                    <div class="error">
                        <div class="alert alert-danger" role="alert">
                            <span id="error-msg"></span>
                        </div>
                    </div>
                    <form action="POST">
                        <div class="form-group mb-3">
                            <label for="fname" class="mb-2">First Name <p class="text-danger d-inline">*</p></label>
                            <input class="form-control" type="text" id="f-name">
                        </div>
                        <div class="form-group mb-3">
                            <label for="lname" class="mb-2">Last Name <p class="text-danger d-inline">*</p></label>
                            <input class="form-control" type="text" id="l-name">
                        </div>
                        <div class="form-group mb-5">
                            <label for="id" class="mb-2">Your ID <p class="text-danger d-inline">*</p></label>
                            <input class="form-control" type="text" id="ID">
                        </div>
                        <p class="note">Please Upload 2 images </p>
                        <div class="form-group mb-3 d-flex flex-column">
                            <label for="exampleFormControlFile1" class="mb-2">Image 1 <p class="text-danger d-inline">*</p></label>
                            <input type="file" class="form-control-file" id="fimg" accept="image/*">
                        </div>
                        <div class="form-group mb-3 d-flex flex-column">
                            <label for="exampleFormControlFile1" class="mb-2">Image 2 <p class="text-danger d-inline">*</p></label>
                            <input type="file" class="form-control-file" id="simg" accept="image/*">
                        </div>
                        <button type="submit" class="primary-button">Submit</button>
                    </form>
                </div>
            </div>
            <div class="col d-flex justify-content-center align-items-center">
                <h4>
                    <img src="/images/auth.png" alt="" class="auth-image">
                </h4>
            </div>
        </div>
    </div>

    <script src="/js/navbar.js"></script>
    <script src="/js/validate.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
</body>
</html>